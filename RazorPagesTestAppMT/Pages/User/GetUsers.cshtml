@page
@model RazorPagesTestAppMT.Pages.User.GetUsersModel
@{
}

<br />
<div class="row">
	<div class="col-6">
		<h2 class="text-primary">User List</h2>
	</div>
</div>
<div class="p-4 border rounded">
	@if (Model.Users.Count() > 0)
	{
		<table class="table table-striped border">
			<tr>
				<th>Username</th>
				<th>Role</th>
				<th>Email confirmed</th>
				<th>Two factor enabled</th>
				@*for buttons i add after*@
				<th></th>
			</tr>
			@foreach (var item in Model.Users)
			{
				<tr>
					<td>@item.UserName</td>
					<td>@item.Role</td>
					<td>@item.EmailConfirmed</td>
					<td>@item.TwoFactorEnabled</td>
					<td>
						<div class="text-center">
							<form>
								<a asp-page="Edit" asp-route-userId="@item.Id" class="btn btn-info text-white" style="cursor:pointer">
									Edit
								</a>

								@*Claims button newly added*@
								<a asp-page="ManageUserClaims" asp-route-userId="@item.Id" class="btn btn-primary text-white"
								   style="cursor:pointer">Claims</a>

								@*we are adding this if conditions for lock unlock user*@
								@if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
								{
									// we want to show option to lock the user
									<button asp-page="LockUnlock" asp-route-userId="@item.Id" class="btn btn-success text-white"
											style="cursor:pointer">
										<span>&nbsp; Lock &nbsp;</span>
									</button>
								}
								else
								{
									@*we want to show option to unlock the user*@
									<button asp-page="LockUnlock" asp-route-userId="@item.Id" class="btn btn-warning text-white"
											style="cursor:pointer">
										<span>Unlock</span>
									</button>
								}

								<a asp-page="/User/DeleteUser" asp-route-userId="@item.Id" class="btn btn-danger text-white" style="cursor:pointer">
									Delete
								</a>

								@*<button type="submit" onclick="return confirm('Are you sure you want to delete this User?')" class="btn btn-danger">
									Delete
								</button>*@
							</form>
						</div>
					</td>
				</tr>
			}
		</table>
	}
</div>
