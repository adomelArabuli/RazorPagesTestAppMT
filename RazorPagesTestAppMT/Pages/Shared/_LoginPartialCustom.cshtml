@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" href="/Account/Profile">Hello @UserManager.GetUserName(User)</a>
        </li>

        <li class="nav-item">
            <form id="logoutForm" method="post" class="form-inline" asp-page="/Account/LogOut">
                <button type="submit" class="btn nav-link">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-page="/Account/Register">Register</a>

        </li>
        <li class="nav-item">
            <a class="nav-link" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>