@page
@model RazorPagesTestAppMT.Pages.Account.VerifyAuthenticationCodeModel
@{
}

<h1>Verify authenticator code</h1>
<form asp-page="VerifyAuthenticationCode" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" role="form">
	<div asp-validation-summary="All" class="text-danger"></div>
	<input asp-for="Model.RememberMe" type="hidden" />
	<hr />
	<div class="form-group">
		<label asp-for="Model.Code" class="col-md-2"></label>
		<div class="col-md-10">
			<input asp-for="Model.Code" class="form-control" />
			<span asp-validation-for="Model.Code" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group mt-3">
		<div class="offset-md-2 col-md-10"></div>
		<button class="btn btn-success">Submit</button>
	</div>
</form>

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}